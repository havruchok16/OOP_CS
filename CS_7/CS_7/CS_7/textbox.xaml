<UserControl x:Class="CS_7.textbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS_7"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <TextBox BorderBrush="#FFFF9EC1" BorderThickness="3" Padding="10" Foreground="#FFFF5693" FontFamily="Courier New" FontSize="30">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="10" Color="#FFFF5693" Opacity="0.5" ShadowDepth="0"/>
            </TextBox.Effect>
        </TextBox>
    </Grid>
</UserControl>
